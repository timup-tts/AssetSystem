<div class="row">
  <div class="col-sm-12">
    <ul class="nav nav-pills">
    <li role="presenation"> <%= link_to 'Add New Contract', new_contract_path %></li>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Contract Type<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to "All", contracts_path %></li>
        <li><%= link_to "Maintenance", controller: "contracts", contract_type: "Maintenance" %></li>
        <li><%= link_to "Lease", controller: "contracts", contract_type: "Lease" %></li>
        <li><%= link_to "Support", controller: "contracts", contract_type: "Support" %></li>
        <li><%= link_to "Subscription", controller: "contracts", contract_type: "Subscription" %></li>
      </ul>
    </li>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Status<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><%= link_to "All", contracts_path %></li>
        <li><%= link_to "Active", controller: "contracts", status: "Active" %></li>
        <li><%= link_to "Expired", controller: "contracts", status: "Expired" %></li>
        <li><%= link_to "Purchased", controller: "contracts", status: "Purchased" %></li>
      </ul>
    </li>
  </ul>
</div>
</div>


<div class="row">
  <div class="col-sm-12">

    <h1>All Contracts:</h1>
    <div class="table-responsive">
      <table id="show-table" class="tablesorter table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Agreement Number</th>
          <th>Vendor</th>
          <th>Status</th>
          <th>End Date</th>
          <th>Edit</edit>
          <th>Remove</th>
        </tr>
      </thead>

      <tbody>
        <% @contracts.each do |contract| %>
          <tr>
            <td><%= link_to contract.contract_title, contract_path(contract) %></td>
            <td><%= contract.contract_number %></td>
            <td><%= contract.vendor %></td>
            <td><%= contract.status %></td>
            <td><%= contract.end_date %></td>
            <div class="edit-icon">
              <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_contract_path(contract) %></td>
            </div>
            <td><%= link_to '<i class="fa fa-times"></i>'.html_safe, contract_path(contract),
                              method: :delete,
                              data: { confirm: 'Are you sure?' } %></td>
          </tr>
            <% end %>
          </tbody>

        </table>
      </div>

      <%= will_paginate @contract, renderer: BootstrapPagination::Rails %>

    </div>
</div>
