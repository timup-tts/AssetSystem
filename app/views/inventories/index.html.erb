<% provide(:title, "Welcome!") %>

<div class="row">
  <div class="col-sm-12">

    <%= link_to 'Add New Asset', new_inventory_path %>

      <%= form_tag inventories_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag " Search", :name => nil %>
    </p>
    <% end %>

    <h1>Inventory</h1>
      <% @inventory.each do |inventory| %>
        <div class="asset-show">
          <ul>
            <li><%= inventory.name %><span> </span><%= link_to 'View', inventory_path(inventory) %></span> <span><%= link_to 'Edit', edit_inventory_path(inventory) %></span></li>
            <li><%= link_to 'Delete', inventory_path(inventory),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
        <% end %>
  </div>
</div>
