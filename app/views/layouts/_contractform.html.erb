<%= form_for @contract, html: { multipart: true } do |f| %>
<div class="row">
  <div class="form-group col-sm-4">
    <% if @contract.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contract.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @contract.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.label "Name" %>
    <%= f.text_field :contract_title, class: 'form-control' %>

    <%= f.label "Agreement Number" %>
    <%= f.text_field :contract_number, class: 'form-control' %>

    <%= f.label "Vendor" %>
    <%= f.text_field :vendor, class: 'form-control' %>

    <%= f.label "Contact" %>
    <%= f.text_field :contact, class: 'form-control' %>

  </div>

  <div class="form-group col-sm-4">

    <%= f.label "PO Number" %>
    <%= f.text_field :po_number, class: 'form-control' %>

    <%= f.label "Purchase Date" %>
    <%= f.date_field :purchase_date, class: 'form-control' %>

    <%= f.label "Cost" %>
    <%= f.text_field :contract_cost, class: 'form-control' %>

    <%= f.label :contract_type %>
    <%= f.select(:contract_type, ['Maintenance', 'Lease', 'Support', 'Subscription'], {}, { class: 'form-control' }) %>

  </div>

  <div class="form-group col-sm-4">
    <%= f.label "Start Date" %>
    <%= f.date_field :start_date, :default=>Date.today.strftime("%d/%m/%Y"), class: 'form-control' %>

    <%= f.label "End Date" %>
    <%= f.date_field :end_date, class: 'form-control' %>

    <%= f.label :status %>
    <%= f.select(:status, ['Active', 'Expired', 'Purchased'], {}, { class: 'form-control'}) %>

  </div>

</div>
<!-- Row end -->

<div class="row">
  <div class="form-group col-sm-6">
    <%= f.label "Attachment" %>
    <%= f.file_field :contract_attach %><br>
    <% if @contract.contract_attach.file? %>
    <p>Attached:</p>
    <p><%= link_to @contract.contract_attach_file_name, @contract.contract_attach.url %></p>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="form-group col-sm-6">
    <%= f.label "Description" %>
    <%= f.text_area :description, class: 'form-control' %>

    <%= f.submit "Submit", class: "btn btn-primary btn-sm"%>
  </div>
</div>

<% end %>
